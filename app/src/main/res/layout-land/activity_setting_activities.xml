<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.vns_handheld004.SettingActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Company_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="28dp"
            android:text="@string/setting"
            android:textSize="18sp"
            android:textColor="@color/FbBlue"
            app:layout_constraintBottom_toTopOf="@+id/layoutButtons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_id" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="46dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/border"
            android:contentDescription="@string/app_name"
            android:src="@drawable/vinashoot_logo"
            app:layout_constraintEnd_toStartOf="@+id/app_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/app_id"
            android:layout_width="292dp"
            android:layout_height="41dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text='VINASHOOT HANDHELD ID:'
            android:textColor="#0E0000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutButtons"
            android:layout_width="359dp"
            android:layout_height="329dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/app_id"
            app:layout_constraintVertical_bias="0.261">

            <TextView
                android:id="@+id/tvZIGstt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="@color/Silver"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tvzigbee"
                app:layout_constraintTop_toBottomOf="@+id/tvzigbee" />

            <TextView
                android:id="@+id/tvLANstt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="@color/Silver"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tvZIGstt"
                app:layout_constraintTop_toBottomOf="@+id/tvlan" />

            <TextView
                android:id="@+id/tvRSstt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="@color/Silver"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tvLANstt"
                app:layout_constraintTop_toBottomOf="@+id/tvrs485" />


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="71dp"
                android:layout_height="45dp"
                android:src="@drawable/rs485"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvrs485" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="78dp"
                android:layout_height="44dp"
                android:src="@drawable/wireless"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/tvzigbee" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="89dp"
                android:layout_height="50dp"
                android:src="@drawable/rj45"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintHorizontal_bias="0.526"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/tvlan" />

            <ImageView
                android:layout_width="56dp"
                android:layout_height="61dp"
                android:src="@drawable/usb"
                app:layout_constraintBottom_toBottomOf="@+id/usb"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.59"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/usb"
                app:layout_constraintVertical_bias="0.405" />

            <TextView
                android:id="@+id/usb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usb"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/tvzigbee"
                app:layout_constraintStart_toStartOf="@+id/tvzigbee"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvzigbee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_weight="1.0"
                android:text="@string/zigbee"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/tvlan"
                app:layout_constraintStart_toStartOf="@+id/tvlan"
                app:layout_constraintTop_toBottomOf="@+id/usb" />

            <TextView
                android:id="@+id/tvlan"
                android:layout_width="158dp"
                android:layout_height="23dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_weight="1.0"
                android:text="@string/lan"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/tvrs485"
                app:layout_constraintStart_toStartOf="@+id/tvrs485"
                app:layout_constraintTop_toBottomOf="@+id/tvzigbee" />

            <TextView
                android:id="@+id/tvrs485"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_weight="1.0"
                android:text="@string/rs485"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/tvlan" />

            <RelativeLayout
                android:layout_width="75dp"
                android:layout_height="266dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.96"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/sw_usb"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="13dp"
                    android:layout_weight="1"
                    android:theme="@style/SCBSwitch"
                    android:gravity="center_horizontal|center_vertical" />

                <Button
                    android:id="@+id/bt_zig"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="147dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:gravity="center"
                    android:text="@string/check"
                    android:textColor="@color/Black" />

                <Button
                    android:id="@+id/bt_lan"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="154dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:gravity="center"
                    android:text="@string/check"
                    android:textColor="@color/Black" />

                <Button
                    android:id="@+id/bt_rs485"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="227dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:gravity="center"
                    android:text="@string/check"
                    android:textColor="@color/Black" />


            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>