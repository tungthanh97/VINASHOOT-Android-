<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <LinearLayout
            android:id="@+id/layoutlogo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="35dp"
                android:layout_height="@dimen/logo_height"
                android:layout_marginStart="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:contentDescription="@string/app_name"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/logoName"
                android:layout_width="240dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="9"
                android:background="@drawable/border"
                android:contentDescription="@string/app_name"
                android:padding="0dp"
                android:paddingStart="25dp"
                android:paddingEnd="8dp"
                android:src="@drawable/logo_name" />

            <Button
                android:id="@+id/app_id"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="65dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|start"
                android:layout_weight="1"
                android:background="@drawable/id_selector"
                android:text="@string/ID_PHONE"
                android:textColor="@color/Black"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutMainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/layoutImageContainer"
                android:layout_width="396dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutConfigTarget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutDetails"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:id="@+id/layoutTargetSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnSetting"
                            android:layout_width="38dp"
                            android:layout_height="34dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/setting"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/setting_icon" />

                        <TextView
                            android:id="@+id/tvTargetName"
                            android:layout_width="230dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="@string/target"
                            android:textColor="#100101"
                            android:textSize="20sp" />

                        <ImageButton
                            android:id="@+id/btnGridsize"
                            android:layout_width="33dp"
                            android:layout_height="35dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/gridsize"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/grid_icon" />
                    </LinearLayout>

                </LinearLayout>

                <com.example.vns_handheld004.View.PixelGridView
                    android:id="@+id/PgvTarget"
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/border"
                    android:contentDescription="@string/image_border"
                    app:spread_center_color="@color/Red"
                    app:spread_delay_milliseconds="1000"
                    app:spread_distance="1"
                    app:spread_spread_color="@color/Red" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1">
                <!--ImageView on which image will be set-->
                <LinearLayout
                    android:id="@+id/layoutDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <LinearLayout
                        android:id="@+id/layoutGeneralInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvLaneNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/LaneNumber"
                                android:textColor="#100101"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/value_daiban"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="#100101"
                                android:textSize="30sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/time"
                                android:textColor="#100101"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/value_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="90"
                                android:textColor="#100101"
                                android:textSize="30sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTemp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/Temp"
                                android:textColor="#100101"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/value_temp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:gravity="center"
                                android:text="35.6"
                                android:textColor="#100101"
                                android:textSize="30sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/headerScroll"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/border"
                    android:fillViewport="true"
                    app:layout_constraintBottom_toTopOf="@+id/nsvTableResult"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutDetails"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtNo"
                            android:layout_width="36dp"
                            android:layout_height="35dp"
                            android:layout_weight="9"
                            android:background="@drawable/row_unselected_odd"
                            android:gravity="center"
                            android:text="@string/No"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_axisX"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_weight="12"
                            android:background="@drawable/row_unselected_odd"
                            android:gravity="center"
                            android:text="@string/X"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_axisY"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_weight="12"
                            android:background="@drawable/row_unselected_odd"
                            android:gravity="center"
                            android:text="@string/Y"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_V"
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:layout_weight="11"
                            android:background="@drawable/row_unselected_odd"
                            android:gravity="center"
                            android:text="@string/V"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_Mark"
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:background="@drawable/row_unselected_odd"
                            android:gravity="center"
                            android:text="@string/Mark"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_M_H"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:background="@drawable/row_unselected_odd"
                            android:gravity="center"
                            android:text="@string/M_H"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_Time"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_weight="12"
                            android:background="@drawable/row_unselected_odd"
                            android:gravity="center"
                            android:text="@string/Time"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />
                    </LinearLayout>
                </HorizontalScrollView>

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nsvTableResult"
                    android:layout_width="match_parent"
                    android:layout_height="185dp"
                    android:layout_gravity="center"
                    android:fillViewport="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/headerScroll">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvShootresults"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible"></androidx.recyclerview.widget.RecyclerView>
                </androidx.core.widget.NestedScrollView>
                <LinearLayout
                    android:id="@+id/layoutTarget"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/nsvTableResult"
                    app:layout_constraintTop_toBottomOf="@+id/nsvTableResult">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTarget"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">


                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>



