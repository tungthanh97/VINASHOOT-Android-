<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Divider">
        <item name="android:background">@color/WhiteSmoke</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item> // You can change thickness here.

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- Switch Color theme -->
    <style name="SCBSwitch" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#4267B2</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
    <style name="ShadowText">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">#D84285B2</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:textColor">@color/FbBlue</item>
        <item name="android:shadowRadius">8</item>
    </style>
    <style name="UnselectedText">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:shadowColor">#B22C2121</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">3</item>
        <item name="android:fadingEdge">horizontal</item>
         <item name="android:shadowRadius">5</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>